<%layout('./partials/homeLayout')%>
  <main class="text-center">
    <div>
      <h1>Welcome to Salesforce Auto Payment</h1>
      <div>
        <h2>Order Status</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <h2>Search for an Order</h2>
        <p>Please enter Purchase ID:</p>
        <div id="vue-index">
          <input type="text" v-model="Id" class="col-lg-4">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button" @click="subtmitId">Submit</button>
          </span>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
      <div class="col-lg-6">
        <h2>Sign in to see your recent orders</h2>
        <p>Orders placed with your Account.</p>
        <span class="input-group-btn">
          <a href="/signin"  class="btn btn-black" type="button">Sign In</a>
          <a href="/signup"class="btn btn-default btn-black" type="button">Create an Account</a>
        </span>
      </div>
    </div>
  </main>
  <script src="/javascripts/components/searchControl.js"></script>
